{
  "swagger" : "2.0",
  "host" : "alodc.ponelat.com",
  "schemes" : [ "http" ],
  "basePath" : "/",
  "info" : {
    "version" : "0.0.2",
    "title" : "A Lot Of Dot Coms",
    "description" : "Verisign has allowed me (and anyone, if you sign up) access to their master zone file, ie: the list of all dot coms! Have to do something with that :)"
  },
  "paths" : {
    "/com" : {
      "get" : {
        "description" : "Query against the list of dot coms",
        "summary" : "Get dot coms that match query",
        "parameters" : [ {
          "name" : "regexp",
          "in" : "query",
          "description" : "A Perl compatible Regular Expression",
          "type" : "string",
          "format" : "regexp",
          "required" : false
        }, {
          "name" : "str",
          "in" : "query",
          "description" : "A case-insensitive string",
          "type" : "string",
          "required" : false
        } ],
        "responses" : {
          "200" : {
            "description" : "List of results from RegExp query",
            "schema" : {
              "$ref" : "#/definitions/QueryResults"
            }
          },
          "404" : {
            "description" : "No matches found"
          }
        }
      }
    }
  },
  "definitions" : {
    "QueryResults" : {
      "type" : "object",
      "properties" : {
        "page" : {
          "type" : "number",
          "description" : "paged results index"
        },
        "query" : {
          "$ref" : "#/definitions/Query"
        },
        "matches" : {
          "$ref" : "#/definitions/Matches"
        }
      }
    },
    "Query" : {
      "type" : "object",
      "properties" : {
        "query" : {
          "type" : "string",
          "example" : "pon.*",
          "description" : "query used for results"
        },
        "queryType" : {
          "type" : "string",
          "enum" : [ "regexp", "string" ],
          "example" : "regexp",
          "description" : "type of query"
        },
        "domain" : {
          "type" : "string",
          "description" : "domain that was queried",
          "example" : "com"
        }
      }
    },
    "Matches" : {
      "type" : "array",
      "items" : {
        "$ref" : "#/definitions/Match"
      }
    },
    "Match" : {
      "type" : "string",
      "description" : "the domain associated with the match",
      "example" : "ponelat"
    }
  }
}